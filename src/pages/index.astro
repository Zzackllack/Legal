---
import Layout from '../layouts/Layout.astro';
import Overview from './index/Overview.tsx'; // Import the new Overview component
import Footer from '../components/Footer.tsx'; // Import the Footer component
---

<Layout title="Rechtliche Hinweise - Ãœbersicht">
	<main class="bg-black min-h-screen flex flex-col"> {/* Ensure dark background and full height */}
		<div class="flex-grow"> {/* Make Overview take available space */}
			<Overview client:load /> {/* Use the Overview component */}
		</div>
		<Footer client:visible /> {/* Add the Footer */}
	</main>
</Layout>

<style is:global>
	/* Ensure body takes full height if needed, though global.css might handle this */
	body {
		min-height: 100vh;
		background-color: #000; /* Ensure background is black */
		display: flex;
		flex-direction: column;
	}
	html {
		height: 100%;
	}
	main {
		flex-grow: 1; /* Ensure main takes up remaining space */
	}
</style>
