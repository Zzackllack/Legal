---
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/media/Designer.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	<meta name="description" content="A comprehensive legal information website providing privacy policies, terms of use for zacklack.de." />
	<meta name="keywords" content="legal, privacy policy, terms of use, cookies, impressum, legal information" />
	<meta name="author" content="CÃ©dric" />
	<meta property="og:title" content={title} />
	<meta property="og:description" content="Explore detailed legal information and policies off zacklack.de." />
	<meta property="og:image" content="/media/Designer.png" />
	<meta property="og:url" content={Astro.url.pathname} />
	<meta property="og:type" content="website" />
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content={title} />
	<meta name="twitter:description" content="Explore detailed legal information and policies off zacklack.de." />
	<meta name="twitter:image" content="/media/Designer.png" />
	<link rel="canonical" href={Astro.url.pathname} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
